config SND_SOC_ROCKCHIP
	tristate "ASoC support for Rockchip"
	depends on COMPILE_TEST || ARCH_ROCKCHIP
	select SND_SOC_GENERIC_DMAENGINE_PCM
	help
	  Say Y or M if you want to add support for codecs attached to
	  the Rockchip SoCs' Audio interfaces. You will also need to
	  select the audio interfaces to support below.

config SND_SOC_ROCKCHIP_I2S
	tristate

config SND_SOC_ROCKCHIP_MAX98090
	tristate "ASoC support for Rockchip boards using a MAX98090 codec"
	depends on SND_SOC_ROCKCHIP && I2C && GPIOLIB
	select SND_SOC_ROCKCHIP_I2S
	select SND_SOC_MAX98090
	select SND_SOC_TS3A227E
	help
	  Say Y or M here if you want to add support for SoC audio on Rockchip
	  boards using the MAX98090 codec, such as Veyron.

config SND_SOC_ROCKCHIP_HDMI_AUDIO
	tristate "ASoC support for Rockchip HDMI audio"
	depends on SND_SOC_ROCKCHIP
	select SND_SOC_ROCKCHIP_I2S
	select SND_SOC_DW_HDMI_AUDIO
	help
	  Say Y or M here if you want to add support for SoC audio on Rockchip
	  HDMI, such as rk3288 hdmi.

config SND_SOC_ROCKCHIP_RT5631
	tristate "ASoC support for Rockchip boards using a RT5631 codec"
	depends on SND_SOC_ROCKCHIP && I2C && GPIOLIB
	select SND_SOC_ROCKCHIP_I2S
	select SND_SOC_RT5631
	help
	  Say Y or M here if you want to add support for SoC audio on Rockchip
	  boards using the RT5631 codec, such as Veyron.

config SND_SOC_ROCKCHIP_RT5640
	tristate "ASoC support for Rockchip boards using a RT5640 codec"
	depends on SND_SOC_ROCKCHIP && I2C && GPIOLIB
	select SND_SOC_ROCKCHIP_I2S
	select SND_SOC_RT5640
	help
	  Say Y or M here if you want to add support for SoC audio on Rockchip
	  boards using the RT5640 codec, such as Veyron.

#TSAI copied from 3.10 and modify accordiningly, this is a wrapper for es8316 
config SND_RK_SOC_ES8316
        tristate "SoC I2S Audio support for rockchip - ES8316"
        depends on SND_SOC_ROCKCHIP
        select SND_SOC_ROCKCHIP_I2S
        select SND_SOC_ES8316
        help
          Say Y if you want to add support for SoC audio on rockchip
          with the ES8316.

